pipeline {
  agent any
  
  stages {
    stage('Build') {
      steps {
          echo 'This is Build' 
      }
    }
    
    stage('Test') {
      steps {
          echo 'This is Test' 
      }
    }
  
    stage('Deploy') {
      steps {
          echo 'This is Deploy' 
      }
    }
    
    stage("Send Email") {
        steps {
            mail bcc: '', body: 'Pipeline build successfully!!', cc: '', from: '', replyTo: '', subject: 'Script Pipeline from Jenkins', to: 'vishwajeetkadam14@gmail.com'   
        }
    }
    
  }
}
